<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jaisingh.android.myappportfolio.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:gravity="center"
        android:textSize="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Spotify Streamer"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#F08C35"
        android:layout_margin="5dp"
        android:onClick="launchSpotify"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Scores App"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#F08C35"
        android:layout_margin="5dp"
        android:onClick="launchScores"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Library App"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#F08C35"
        android:layout_margin="5dp"
        android:onClick="launchLibrary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Build It Bigger"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#F08C35"
        android:layout_margin="5dp"
        android:onClick="launchBuilder"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="XYZ Reader"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#F08C35"
        android:layout_margin="5dp"
        android:onClick="launchReader"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Capstone: My Own App"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#ebd21034"
        android:layout_margin="5dp"
        android:onClick="launchCapstone"/>
    </LinearLayout>
</LinearLayout>
